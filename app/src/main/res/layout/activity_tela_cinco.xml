<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TelaCinco">

    <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/materialToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/black"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/bt6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Início"
            android:onClick="inicio"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp" app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:id="@+id/bt7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sobre"
            android:onClick="sobre"
            app:layout_constraintStart_toEndOf="@id/bt6"
            app:layout_constraintTop_toTopOf="@id/bt6"/>
    <Button
            android:id="@+id/bt8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contato"
            android:onClick="contato"
            app:layout_constraintStart_toEndOf="@id/bt7"
            app:layout_constraintTop_toTopOf="@id/bt7" />

    <Button
            android:id="@+id/bt9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Planos"
            android:onClick="plano"
            app:layout_constraintStart_toEndOf="@id/bt8"
            app:layout_constraintTop_toTopOf="@id/bt8" />

    <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:src="@drawable/logo"
            app:layout_constraintTop_toBottomOf="@id/bt6" />

    <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sobre Nós"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bem-vindo à BLACK BARBER Barbearia! Somos apaixonados por proporcionar cortes de cabelo e barba com estilo. Nosso compromisso é oferecer serviços de alta qualidade para homens que buscam um visual único e elegante."
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/text1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nossa equipe de barbeiros altamente treinada está aqui para atender às suas necessidades. Seja um corte clássico, um degradê moderno ou um design de barba personalizado, estamos aqui para garantir que você saia com confiança e satisfação."
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/text2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    <TextView
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Conheça o app BARBER VIEW! Com ele, você agenda seu corte de cabelo ou barba de forma fácil. Sem complicações, basta alguns toques no celular para marcar o horário que melhor se encaixa na sua agenda. Além disso, aproveite o reconhecimento facial para um check-in rápido e seguro no dia do seu corte. Receba lembretes, aproveite promoções especiais e tenha tudo na ponta dos dedos. Baixe agora e simplifique seu próximo corte com reconhecimento facial!"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@id/text3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
